<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Nueva celebridad</h1>
            <hr>
            <form action="/celebrities/create" method="POST">
                <!--action envia los resultados-->
                <div class="form-group">
                    <label for="name">Nombre</label>
                    <input type="text" class="form-control" name="name" id="name">
                </div>
                <div class="form-group">
                    <label for="occupation">Ocupacion</label>
                    <input type="text" class="form-control" name="occupation" id="occupation">
                </div>
                <div class="form-group">
                    <label for="catchPhrase">Frase</label>
                    <input type="text" class="form-control" name="catchPhrase" id="catchPhrase">
                </div>
                <button type="submit" class="btn btn-dark btn-block btn-lg">Crear celebridad</button>
                <br>
                <a href="/">Inicio</a>
            </form>
        </div>

    </div>

</div>